        <h2>Products for sale by <%= user.username %> </h2>
        <ul>
          <% for (let i = 0; i < user.products.length; i++) {%>
              <li><a href="/articles/<%=user.products[i]._id%>"><%=user.products[i].title%></a></li>
          <% } %>
        </ul>
      </section>

<a href="/users/<%=user._id%>/edit">Edit User</a>
<a href="/products/new">Create a New Product</a>

<form action='/users/<%= user._id%>?_method=DELETE' method='POST'>
<button>Delete User</button>
</form>


